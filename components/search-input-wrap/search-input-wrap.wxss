/* components/search-input-wrap/search-input-wrap.wxss */
.header{
  height: 88rpx;
  width: 100%;
  display: flex;
  background: #fff;
}

.city{
  box-sizing: border-box;
  max-width: 250rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 32rpx 0 24rpx;
  position: relative;
  font-size: 28rpx;
}
.expand{
  position: absolute;
  top: 50%;
  right: 8rpx;
  width:0;
  height:0;
  border: 6rpx solid #2a2a2a;
  border-color: #2a2a2a transparent transparent transparent
}
.search-wrap{
  box-sizing: border-box;
  flex: 1;
  background: #fff;
  padding: 10rpx 16rpx;
}
.search{
  width: 100%;
  height: 100%;
  border-radius: 34rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  position: relative;
}
.search cover-image{
  width: 32rpx;
  height:30rpx;
  position: absolute;
  top: 50%;
  left: 32rpx;
  transform: translateY(-50%);
}
.search .placeholder{
  padding-left: 70rpx;
  font-size: 30rpx;
  color: #999;
}