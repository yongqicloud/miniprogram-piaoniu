}
.time_container{

}
.zIndex10{
	width: 100%;
	position: absolute;
	left: 0;
	top:70rpx;
}
.zIndex10 view{
	width: 100%;
	height:30rpx;
	padding:28rpx 0 28rpx 18rpx;
}
.listContainer{
	flex:1;
	position: relative;
}
.list_shadow{
width: 100%;
height: 100%;
position: absolute;
left:0;
top:0;
background-color:#999; 
z-index:5;

}
.pullBox_top .colorred{
	color:#ff2661;
}
.pullBox_top .colorblack{
	color:#333333;
}
