<!--pages/perform/activitypage/activitypage.wxml-->
<view class="activityContainer">
  <view class="details">
    <view class="head">
      <view class="imgContainer">
        <image class="img" src="{{imgsrc}}"></image>
      </view>

      <view class="message">
        <h3>{{title}}</h3>
        <view class="score">
          {{score}}
        </view>
        <view class="priceBox">
          <text class="price">{{price}}</text>元起</view>
      </view>
    </view>
  </view>
  <view class="time">{{time}} </view>
    <view class="position">{{position}}</view>
 
</view>