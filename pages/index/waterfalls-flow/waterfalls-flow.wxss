/* pages/index/waterfalls-flow/waterfalls-flow.wxss */
.waterfall-flow .title{
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  padding-left: 40rpx;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid blue;
}
.waterfall-flow scroll-view{
  width: 100%;
  background: #fff;
}
.waterfall-flow .nav{
  display: flex;
  width: max-content;
  background: #fff;
}
.waterfall-flow .nav-item{
  box-sizing: border-box;
  width: 20vw;
  padding:20rpx 0;
  color: #555;
  display: flex;
  justify-content: center;
  align-items: center;
}
.waterfall-flow .nav-item.active{
  font-size: 30rpx;
  font-weight: 700;
  color: #000;
  position: relative;
}
.waterfall-flow .nav-item.active::after{
  box-sizing: border-box;
  content: '';
  width:30%;
  height: 100%;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  margin: auto;
  border-bottom: 4rpx solid salmon;
}
.waterfall-flow .title{
  font-size: 40rpx;
  padding: 20rpx 40rpx;
}
.waterfall-flow .nav-item{
  font-size: 24rpx;
}