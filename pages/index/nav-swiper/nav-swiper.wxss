/* pages/index/nav-swiper/nav-swiper.wxss */
.body{
  background:#fff;
}
.nav{
  display: flex;
  width: max-content;
  background: #fff;
}
.nav-item{
  box-sizing: border-box;
  width: 20vw;
  padding:20rpx 0;
  color: #555;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav-item.active{
  font-size: 30rpx;
  font-weight: 700;
  color: #000;
  position: relative;
}
.nav-item.active::after{
  box-sizing: border-box;
  content: '';
  width:30%;
  height: 100%;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  margin: auto;
  border-bottom: 4rpx solid salmon;
}
.title{
  font-size: 40rpx;
  padding: 20rpx 40rpx;
}
.nav-item{
  font-size: 24rpx;
}
/* 下半部分 */

.nav-body-wrap-scoll{
  width: 100%;
  /* height: 420rpx; */
  padding-top: 40rpx;
  background: lavender;

}

.nav-body-wrap{
  padding-left: 20rpx;
  width: max-content;
  height: 100%;
  display:flex;
  flex-wrap: wrap;

}
.ticket-item{
  width: 204rpx;
  margin-right: 20rpx;

}
.ticket-item navigator{
  width: 100%
}
.ticket-item navigator image{
  display: block;
  width: 100%;
  height: 274rpx;
}
.ticket-item navigator .name{
  width: 100%;
  padding-top:20rpx;
  line-height: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 24rpx;
}
.ticket-item navigator .price-wrap{
  height:60rpx ;
  /* padding-top: 20rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;

}
.ticket-item navigator .price-wrap .price-num-content{
  color: #F43A6D;
  display: flex;
  align-items: center;
}
.price-num-icon{
  flex-shrink: 24rpx;
  transform: scale(0.8);
  
}
.price{
  font-size: 30rpx;
  font-weight: 500;
}
.price-icon{
  border: 2rpx solid #ccc;
  font-size: 24rpx;
  color: #ccc;
  padding: 6rpx;
  display: flex;
  align-items: center;
  transform: scale(0.7);
}
