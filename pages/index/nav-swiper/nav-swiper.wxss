/* pages/index/nav-swiper/nav-swiper.wxss */
.body{
  background:#fff;
}
.nav{
  display: flex;
  width: max-content;
  background: #fff;
}
.nav-item{
  box-sizing: border-box;
  width: 20vw;
  padding:20rpx 0;
  color: #555;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav-item.active{
  font-size: 30rpx;
  font-weight: 700;
  color: #000;
  position: relative;
}
.nav-item.active::after{
  box-sizing: border-box;
  content: '';
  width:30%;
  height: 100%;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  margin: auto;
  border-bottom: 4rpx solid salmon;

}
.title{
  font-size: 40rpx;
  padding: 20rpx 40rpx;
}
.nav-item{
  font-size: 24rpx;
}
/* 下半部分 */

.nav-body-wrap-scoll{
  width: 100%;
  height: 420rpx;
  padding-top: 40rpx;
  background: lavender;

}

.nav-body-wrap{
  padding-left: 40rpx;
}
.ticket-item{
  width: 204rpx;
  margin-right: 20rpx;

}
.ticket-item navigator{
  width: 100%
}
.ticket-item navigator image{
  display: block;
  width: 100%;
  height: 274rpx;
}
.ticket-item navigator .name{
  width: 100%;
  padding-top:20rpx;
  line-height: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.ticket-item navigator .price-wrap{
  height:60rpx ;
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;

}
.ticket-item navigator .price-wrap .price-num{
  color: palevioletred;
} 