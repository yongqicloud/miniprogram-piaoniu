.water-item-wrap{
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}
.water-item-wrap image{
  width: 100%;
}
.water-item-wrap .cover-view{
  position: absolute;
  bottom:20rpx;
  left:0;
  width: 100%;
  height: 150rpx;
  background:hotpink;
}
.water-item-wrap .cover-view .bg-cover{
  position: absolute;
  width: 100%;
  height: 50rpx;
  background: linear-gradient(pink,hotpink);
  
  left: 0;
  top:-50rpx;
}
.water-item-wrap .cover-view .bg-cover text{
  background: yellow;
  color: #999;
  line-height: 1.2
}
.bangdan-title{
  padding: 10rpx 0;
  color:#fff;
  font-size: 30rpx;

}
.sub-title{
  font-size: 24rpx;
  color: #f5f5f5
}
.bottom-shadow{
  position: absolute;
  width: 90%;
  height: 30rpx;
  left: 5%;
  bottom: -10rpx;
  background: hotpink;
  border-radius: 10rpx;
  opacity: 0.7;
}
.bottom-shadow-2{
  opacity: 0.5;
}
.space{
  width: 100%;
  height: 70rpx;
}